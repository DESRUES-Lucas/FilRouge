{% extends 'template.html.twig' %}

{% block body %}
    {% block container %}
        {% block main %}
            {% block section %}
                <div class="serie-form">

                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div >
                        <div class= "form-text">
                            {{ form_label(form.name) }}
                        </div>
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div>
                        <div class= "form-text">
                            {{ form_label(form.resume) }}
                        </div>
                        {{ form_errors(form.resume) }}
                        {{ form_widget(form.resume) }}
                    </div>
                    <div>
                        <div class= "form-text">
                            {{ form_label(form.poster) }}
                        </div>
                        {{ form_errors(form.poster) }}
                        {{ form_widget(form.poster) }}
                    </div>

                    <div class="btn-group">
                        <input type="submit" class="btn btn-default" value="Créer" />
                    </div>
                    {{ form_end(form) }}
                </div>
            {% endblock %}
        {% endblock %}
    {% endblock %}
{% endblock %}
